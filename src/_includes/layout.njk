<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ghall.dev - {{ title }}</title>
    <link rel="stylesheet" href="/style/tailwind.css" />
    <script src="/js/alpine.js"></script>
  </head>
  <body>
    <nav class="max-w-screen-md:px-5 mb-4 bg-sky-400 py-6">
      <div class="mx-auto flex max-w-screen-lg items-center justify-between">
        <h1 class="text-3xl font-bold text-white">ghall.dev</h1>
        <ul class="flex gap-4">
          {% for link in nav %}
          <li
            class="group rounded bg-white px-4 py-1 transition-colors hover:bg-sky-500"
          >
            <a
              class="text-lg uppercase transition-colors group-hover:text-white"
              href="{{ link.href }}"
              >{{ link.label }}</a
            >
          </li>
          {% endfor %}
        </ul>
      </div>
    </nav>
    <div class="max-w-screen-md:px-5 mx-auto max-w-screen-lg">
      <h2 class="text-3xl text-orange-600">{{ title }}</h2>
      {{ content | safe }}
    </div>
    <footer class="mt-4"></footer>
  </body>
</html>
